// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ClassRoom {
  id      Int       @id @default(autoincrement())
  name    String
  Content Content[]
}

model Content {
  id            Int       @id @default(autoincrement())
  title         String
  description   String
  author_name   String
  class_room_id ClassRoom @relation(fields: [classRoomId], references: [id])
  classRoomId   Int
  Comment       Comment[]
}

model Comment {
  id          Int      @id @default(autoincrement())
  author      String
  description String
  time_posted DateTime
  content_id  Content  @relation(fields: [contentId], references: [id])
  contentId   Int
}
